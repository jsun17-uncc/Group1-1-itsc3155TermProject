<h1>Editing tip</h1>
 
<%= form_for :tip, url: tip_path(@tip), method: :patch do |f| %>
 
  <% if @tip.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tip.errors.count, "error") %> prohibited
        this tip from being saved:
      </h2>
      <ul>
        <% @tip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', tips_path %>